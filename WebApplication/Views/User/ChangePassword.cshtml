@model DataAccess.ViewModels.ApplicationUsers.ApplicationUserChangePassword
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="hold-transition login-page" cz-shortcut-listen="true">
    <div class="login-box">
        <div class="login-logo">
            <a href="../"><b>My</b>Services</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">@ViewData["Title"]</p>
            <p class="login-box-msg">@ViewData["Details"]</p>

            <form asp-action="ChangePassword">
                    <input asp-for="UserId" class="hidden" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group has-feedback">
                    <label asp-for="Password1" class="control-label"></label>
                    <input asp-for="Password1" class="form-control" />
                    <span asp-validation-for="Password1" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label asp-for="Password2" class="control-label"></label>
                    <input asp-for="Password2" class="form-control" />
                    <span asp-validation-for="Password2" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Υποβολή</button>
                    </div>
                </div>
            </form>

        </div>
    </div>


    <script>
        $(() => {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>


</body>