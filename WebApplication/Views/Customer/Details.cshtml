@model DataAccess.Models.Entity.Customer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="box box-danger" style="margin-top:5%;">
            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonBackToList("Customer")
                    @Html.ButtonGoToEdit("Customer", Model.Id)
                </div>
            </div>

            <hr />

            <div class="box-body">

                <div class="form-group">
                    <label asp-for="ΙdentifyingΝame" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="ΙdentifyingΝame" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AFM" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="AFM" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Profession" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Profession" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Address" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="PostalCode" class="form-control" readonly="readonly" disabled />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DOY" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="DOY" class="form-control" readonly="readonly" disabled />
                        <span asp-validation-for="DOY" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <div class="input-group">
                        <textarea asp-for="Description" class="form-control" readonly="readonly" disabled></textarea>
                    </div>
                </div>

                @if (Model.Company != null)
                {
                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Company.Title" class="form-control" readonly="readonly" disabled />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="col-md-3"> </div>
</div>

<div class="row">
    <div class="col-md-1"> </div>
    <div class="col-md-10">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["WorkPlaceDataTable"]</h3>
            </div>
            <hr />
            <div class="box-body table-responsive">

                <table id="WorkPlacesDatatable" class="table table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Τίτλος</th>
                            <th>Βρισκεται στα πόστα</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th data-searchable="true">Τίτλος</th>
                            <th data-searchable="true">Βρισκεται στα πόστα</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-1"> </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#WorkPlacesDatatable').DataTable({
            serverSide: true,
            responsive: true,
            colReorder: true,
            processing: true,
            dom: 'Bfrtlp',
            buttons: ['excel', 'print'],
            language: {
                processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only"></span> '
            },
                ajax: {
                    url: '/api/workplaces/datatable',
                    type: 'POST',
                    contentType: "application/json",
                    data: (data, type, row, meta) => {

                        data.predicate = 'CustomerDetails';
                        data.genericId =@Model.Id;

                        return JSON.stringify(data);
                    }
                },
                order: [[0, 'desc']],
                columns: [
                    {
                        data: "Title",
                        searchable: true,
                        orderable: true,
                        render: (a, b, data, d) => {
                            //console.log(data);
                            if (data.Title != null)
                                return data.Title;
                            else
                                return "";
                        }
                    },
                    {
                        data: "IsInWorkPlace",
                        searchable: true,
                        orderable: true,
                        render: (a, b, data, d) => {
                            if (data.IsInWorkPlace != null)
                                return data.IsInWorkPlace;
                            else
                                return "";
                        }
                    }
                ],
                fnDrawCallback:  () =>
                    $('.ToggleSliders').bootstrapToggle({
                        on: 'Ναί',
                        off: 'Όχι'
                    }),
            });

        $('#WorkPlacesDatatable').on('change', '.ToggleSliders', (element) => {
            var apiUrl = element.target.getAttribute('urlattr');
            $.ajax({
                type: "GET",
                url: apiUrl + element.target.checked,
                dataType: "json",
                success: response => {
                    console.log('mmmkeyyyyy');
                }
            });
        });
    </script>
}