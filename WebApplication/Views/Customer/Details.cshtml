@model DataAccess.Models.Entity.Customer

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="box box-danger" style="margin-top:5%;">
            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonBackToList("Customer")
                    @Html.ButtonGoToEdit("Customer", Model.Id)
                </div>
            </div>

            <hr />

            <div class="box-body">

                <div class="form-group">
                    <label asp-for="IdentifyingName" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="IdentifyingName" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="VatNumber" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="VatNumber" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Profession" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Profession" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Address" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="PostalCode" class="form-control" readonly="readonly" disabled />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DOY" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="DOY" class="form-control" readonly="readonly" disabled />
                        <span asp-validation-for="DOY" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <div class="input-group">
                        <textarea asp-for="Description" class="form-control" readonly="readonly" disabled></textarea>
                    </div>
                </div>

                @if (Model.Company != null)
                {
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Company.Title" class="form-control" readonly="readonly" disabled />
                </div>
            </div>}


                <div class="form-group">
                    <label asp-for="CreatedBy_FullName" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="CreatedBy_FullName" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="CreatedOn" class="form-control" readonly disabled />
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-md-3"> </div>
</div>

<div class="row">
    <div class="col-md-1"> </div>
    <div class="col-md-10">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["WorkPlaceDataTable"]</h3>
            </div>
            <hr />
            <div class="box-body table-responsive">

                <table id="WorkPlacesDatatable" class="table table-bordered table-hover table-responsive stripe">
                    <thead>
                        <tr>
                            <th>Τίτλος</th>
                            <th>Βρισκεται στα πόστα</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Τίτλος</th>
                            <th>Βρισκεται στα πόστα</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-1"> </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(() => new DataTableService('#WorkPlacesDatatable')
            .ForApiController('workplaces')
            .AddColumn(true, true, "Title")
            .AddColumn(true, true, "IsInWorkPlace")
            .AjaxData((data, type, row, meta) => {
                data.predicate = 'CustomerDetails';
                data.genericId =@Model.Id;
                return JSON.stringify(data);
            })
            .FnDrawCallback(()=>
                $('.ToggleSliders').bootstrapToggle({
                    on: 'Ναί',
                    off: 'Όχι'
                }))
            .CompleteDataTable());

        $('#WorkPlacesDatatable').on('change', '.ToggleSliders', (element) => {
            var apiUrl = element.target.getAttribute('urlattr');
            $.ajax({
                type: "GET",
                url: apiUrl + element.target.checked,
                dataType: "json",
                success: response => {
                    console.log('mmmkeyyyyy');
                }
            });
        });
    </script>
}
