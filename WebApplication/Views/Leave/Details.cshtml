@model DataAccess.Models.Entity.Leave

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="box box-danger" style="margin-top:5%;">
            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonBackToList("Leave")
                    @Html.ButtonGoToEdit("Leave", Model.Id)
                </div>
            </div>

            <hr />

            <div class="box-body">

                <div class="form-group">
                    <label asp-for="StartOn" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="StartOn" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EndOn" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="EndOn" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <div class="input-group">
                        <textarea asp-for="Description" class="form-control" readonly="readonly" disabled></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Employee.FullName" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="LeaveType" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="LeaveType.Name" class="form-control" readonly="readonly" disabled />
                    </div>
                </div>

            </div>

        </div>
    </div>
    <div class="col-md-3"> </div>
</div>
