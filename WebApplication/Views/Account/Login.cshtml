@model DataAccess.ViewModels.LoginViewModel;

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<body class="hold-transition login-page" cz-shortcut-listen="true">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>My</b>Services</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Είσοδος στήν εφαρμογή</p>

            <form asp-action="Login">
                <input asp-for="ReturnUrl" type="hidden" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group has-feedback">
                    <label asp-for="LoginUserNameOrEmail" class="control-label"></label>
                    <input asp-for="LoginUserNameOrEmail" class="form-control" />
                    <span asp-validation-for="LoginUserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            @*<label>
                                    <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;"><input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div> Remember Me
                                </label>*@
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Είσοδος</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <script>
        $(() => {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>


</body>
