@model DataAccess.Models.Entity.Specialization

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonBackToList("Specialization")
                </div>
            </div>

            <hr />

            <form asp-controller="Specialization" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="box-body">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label asp-for="PayPerHour" class="control-label" placeholder="3.50"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">€</span>
                            </div>
                            <input asp-for="PayPerHour" class="form-control" />
                            <span asp-validation-for="PayPerHour" class="text-danger"></span>
                        </div>
                    </div>*@

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <div class="input-group">
                            <textarea asp-for="Description" class="form-control" /></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="form-group pull-right">
                        <input type="submit" value="Αποθήκευση" class="btn btn-primary " />
                    </div>

                </div>
            </form>

        </div>
    </div>
    <div class="col-md-3"> </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
