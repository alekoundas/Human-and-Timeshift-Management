@model DataAccess.Models.Entity.Employee

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="row">
    <div class="col-md-1"> </div>
    <div class="col-md-4">
        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonBackToList("Employee")
                </div>
            </div>

            <hr />

            <form asp-controller="Employee" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="IsActive" />
                <input type="hidden" asp-for="CreatedBy_Id" />

                <div class="box-body">

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ErpCode" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="ErpCode" class="form-control" />
                            <span asp-validation-for="ErpCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="VatNumber" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="VatNumber" class="form-control" readonly="readonly" />
                            <span asp-validation-for="VatNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="SocialSecurityNumber" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="SocialSecurityNumber" class="form-control" />
                            <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="HireDate" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="HireDate" type="text" class="form-control CalentimInput" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ContractStartOn" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="ContractStartOn" type="text" class="form-control CalentimInput" />
                            <span asp-validation-for="ContractStartOn" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ContractEndOn" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="ContractEndOn" type="text" class="form-control CalentimInput" />
                            <span asp-validation-for="ContractEndOn" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="SpecializationId" class="control-label"></label>
                        <div class="input-group" style="width:100%">
                            <select class="Specialization_Select2" asp-for="SpecializationId" style="width:50%">
                                @if (Model.Specialization != null)
                                {
                    <option value="@Model.SpecializationId" selected="selected">@Model.Specialization.Name</option>
}
                            </select>
                            <span asp-validation-for="SpecializationId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label"></label>
                        <div class="input-group" style="width:100%">
                            <select class="Company_Select2" asp-for="CompanyId" style="width:50%">
                                @if (Model.CompanyId != null)
                                {
                    <option value="@Model.CompanyId" selected="selected">@Model.Company.Title</option>
}
                            </select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CreatedBy_FullName" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="CreatedBy_FullName" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CreatedOn" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="CreatedOn" class="form-control" readonly />
                        </div>
                    </div>

                    <hr />

                    <div class="form-group pull-right">
                        <input type="submit" value="Αποθήκευση" class="btn btn-primary " />
                    </div>

                </div>
            </form>
        </div>
    </div>
    <div class="col-md-1"> </div>
    <div class="col-md-4">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["Contacts"]</h3>
            </div>

            <hr />

            <div class="container" style="width:100%">
                @foreach (var contact in Model.Contacts)
                {
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-6">

            <input type="text" class="form-control hidden" value="@contact.Id" />

            <div class="input-group">
                <label asp-for="Contacts.ElementAt(0).Title" class="control-label"></label>
                <input type="text" class="form-control" value="@contact.Title" />
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Contacts.ElementAt(0).PhoneNumber" class="control-label"></label>
                <input type="text" class="form-control" value="@contact.PhoneNumber" />
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="input-group">
                <label asp-for="Contacts.ElementAt(0).Description" class="control-label"></label>
                <input type="text" class="form-control" value="@contact.Description" />
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-sm-2" style="top:30px">
            <button>del</button>
            <button>edit</button>
        </div>
    </div>}
            </div>
        </div>
    </div>
    <div class="col-md-1"> </div>
</div>


<div class="row">
    <div class="col-md-1"> </div>
    <div class="col-md-10">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["WorkPlaceDataTable"]</h3>
            </div>
            <hr />
            <div class="box-body table-responsive">

                <table id="WorkPlacesDatatable" class="table table-bordered table-hover table-responsive stripe">
                    <thead>
                        <tr>
                            <th>Τίτλος</th>
                            <th>Πελάτη</th>
                            <th>Βρισκεται στα πόστα</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Τίτλος</th>
                            <th>Πελάτη</th>
                            <th>Βρισκεται στα πόστα</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-1"> </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/Custom/Contacts.js"></script>

    <script>
        $('.Specialization_Select2').select2({
            allowClear: true,
            ajax: {
                url: '/api/specializations/select2',
                data: function (params) {
                    var query = {
                        search: params.term,
                        page: params.page || 1
                    }
                    return query;
                }
            }
        });

        $('.Company_Select2').select2({
            allowClear: true,
            ajax: {
                url: '/api/companies/select2',
                data: function (params) {
                    var query = {
                        search: params.term,
                        page: params.page || 1
                    }
                    return query;
                }
            }
        });

        $(() => new DataTableService('#WorkPlacesDatatable')
            .ForApiController('workplaces')
            .AddColumn(true, true, "Title")
            .AddColumn(true, true, "IdentifyingName")
            .AddColumn(true, true, "IsInWorkPlace")
            .AjaxData((data, type, row, meta) => {
                data.predicate = 'EmployeeEdit';
                data.genericId =@Model.Id;
                return JSON.stringify(data);
            })
            .FnDrawCallback(()=>
                $('.ToggleSliders').bootstrapToggle({
                    on: 'Ναί',
                    off: 'Όχι'
                }))
            .CompleteDataTable());


        $('.CalentimInput').calentim({
            showTimePickers: false,
            startOnMonday: true,
            showButtons: true,
            singleDate: true,
            showHeader: true,
            startEmpty:true,
            startDate: Date.now(),
            endDate: Date.now(),
            format: "DD/MM/YYYY",
            calendarCount: 1,
            locale: "el",
            showOn: "right",
            onaftershow: () =>
                //Fix Calentim width
                [...document.getElementsByClassName('calentim-input')]
                    .forEach((calentim) =>
                        calentim.setAttribute('style', 'width: 400px;'))
        })
    </script>

    <script>
        $('#WorkPlacesDatatable').on('change', '.ToggleSliders', (element) => {
            var apiUrl = element.target.getAttribute('urlattr');
            $.ajax({
                type: "GET",
                url: apiUrl + element.target.checked,
                dataType: "json",
                success: response => {
                    console.log('mmmkeyyyyy');
                }
            });
        });
    </script>
}
