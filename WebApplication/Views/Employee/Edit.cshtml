@model DataAccess.Models.Entity.Employee

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-1"> </div>
    <div class="col-md-4">
        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonBackToList("Employee")
                </div>
            </div>

            <hr />

            <form asp-controller="Employee" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="box-body">

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ErpCode" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="ErpCode" class="form-control" />
                            <span asp-validation-for="ErpCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Afm" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Afm" class="form-control" />
                            <span asp-validation-for="Afm" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="SocialSecurityNumber" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="SocialSecurityNumber" class="form-control" />
                            <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="SpecializationId" class="control-label"></label>
                        <div class="input-group">
                            <select class="Specialization_Select2" asp-for="CompanyId" style="width:70%"></select>
                            <span asp-validation-for="SpecializationId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label"></label>
                        <div class="input-group">
                            <select class="Company_Select2" asp-for="SpecializationId" style="width:70%"></select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <div class="form-group pull-right">
                        <input type="submit" value="Αποθήκευση" class="btn btn-primary " />
                    </div>

                </div>
            </form>
        </div>
    </div>
    <div class="col-md-1"> </div>
    <div class="col-md-4">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">Επεξεργασία επαφών</h3>
            </div>

            <hr />

            <div class="container" style="width:100%">
                @foreach (var contact in Model.Contacts)
                {
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-6">

                            <input type="text" class="form-control hidden" value="@contact.Id" />

                            <div class="input-group">
                                <label asp-for="Contacts.ElementAt(0).Title" class="control-label"></label>
                                <input type="text" class="form-control" value="@contact.Title" />
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>

                            <div class="input-group">
                                <label asp-for="Contacts.ElementAt(0).PhoneNumber" class="control-label"></label>
                                <input type="text" class="form-control" value="@contact.PhoneNumber" />
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>
                            <div class="input-group">
                                <label asp-for="Contacts.ElementAt(0).Description" class="control-label"></label>
                                <input type="text" class="form-control" value="@contact.Description" />
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-2" style="top:30px">
                            <button>del</button>
                            <button>edit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-1"> </div>
</div>


<div class="row">
    <div class="col-md-1"> </div>
    <div class="col-md-10">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["TitleDatatableWorkPlaces"]</h3>
            </div>
            <hr />
            <div class="box-body table-responsive">

                <table id="WorkPlacesDatatable" class="table table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Τίτλος</th>
                            <th>Πελάτη</th>
                            <th>Βρισκεται στα πόστα</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th data-searchable="true">Τίτλος</th>
                            <th data-searchable="true">Πελάτη</th>
                            <th data-searchable="true">Βρισκεται στα πόστα</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-1"> </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/Custom/Contacts.js"></script>

    <script>
        $('.Specialization_Select2').select2({
            ajax: {
                url: '/api/specializations/select2',
                data: function (params) {
                    var query = {
                        search: params.term,
                        page: params.page || 1
                    }
                    return query;
                }
            }
        });

        $('.Company_Select2').select2({
            ajax: {
                url: '/api/companies/select2',
                data: function (params) {
                    var query = {
                        search: params.term,
                        page: params.page || 1
                    }
                    return query;
                }
            }
        });
    </script>

    <script>
        $('#WorkPlacesDatatable').DataTable({
                serverSide: true,
                dom: 'frtlp',
                ajax: {
                    url: '/api/workplaces/datatable',
                    type: 'POST',
                    contentType: "application/json",
                    data: (data, type, row, meta) => {

                        data.predicate = 'EmployeeEdit';
                        data.genericId =@Model.Id;

                        return JSON.stringify(data);
                    }
                },
                order: [[0, 'desc']],
                columns: [
                    {
                        data: "Title",
                        searchable: true,
                        orderable: true,
                        render: (a, b, data, d) => {
                            //console.log(data);
                            if (data.Title != null)
                                return data.Title;
                            else
                                return "";
                        }
                    },
                    {
                        data: "CustomerFullName",
                        searchable: true,
                        orderable: true,
                        render: (a, b, data, d) => {
                            if (data.CustomerFullName != null)
                                return data.CustomerFullName;
                            else
                                return "";
                        }
                    },
                    {
                        data: "IsInWorkPlace",
                        searchable: true,
                        orderable: true,
                        render: (a, b, data, d) => {
                            if (data.IsInWorkPlace != null)
                                return data.IsInWorkPlace;
                            else
                                return "";
                        }
                    }
                ],
                fnDrawCallback:  () =>
                    $('.ToggleSliders').bootstrapToggle({
                        on: 'Ναί',
                        off: 'Όχι'
                    }),
            });

        $('#WorkPlacesDatatable').on('change', '.ToggleSliders', (element) => {
            var apiUrl = element.target.getAttribute('urlattr');
            $.ajax({
                type: "GET",
                url: apiUrl + element.target.checked,
                dataType: "json",
                success: response => {
                    console.log('mmmkeyyyyy');
                }
            });
        });
    </script>
}
