@model IEnumerable<DataAccess.Models.Entity.Company>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="box box-danger" style="margin-top:5%;">

            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonCreateNew("Company")
                    @Html.ButtonImport("Company")
                </div>
            </div>
            <hr />
            <div class="box-body table-responsive">

                <table id="CompaniesDatatable" class="table table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Τίτλος</th>
                            <th>ΑΦΜ</th>
                            <th>Ενέργειες</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Τίτλος</th>
                            <th>ΑΦΜ</th>
                            <th>Ενέργειες</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-3"> </div>

</div>
<partial name="_ImportModal" model='new {Entity = "Company" }'>

    @section Scripts {
        <script src="~/js/Custom/DatatableDeleteButton.js"></script>
        <script>


            $('#CompaniesDatatable').DataTable({
                serverSide: true,
                responsive: true,
                colReorder: true,
                processing: true,
                dom: 'Bfrtlp',
                buttons: ['excel', 'pdf', 'print'],
                language: {
                    processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only"></span> '
                },
                ajax: {
                    url: '/api/companies/datatable',
                    type: 'POST',
                    contentType: "application/json",
                    data: (data, type, row, meta) => {
                        data.Predicate = 'CompanyIndex';
                        return JSON.stringify(data);
                    }
                },
                order: [[0, 'desc']],
                columns: [
                    {
                        data: "Title",
                        searchable: true,
                        orderable: true,
                        render: (a, b, data, d) => {
                            console.log(data);
                            if (data.Title != null)
                                return data.Title;
                            else
                                return "";
                        }
                    },
                    {
                        data: "Afm",
                        searchable: true,
                        orderable: true,
                        render: (a, b, data, d) => {
                            if (data.Afm != null)
                                return data.Afm;
                            else
                                return "";
                        }
                    },
                    {
                        data: "Buttons",
                        searchable: false,
                        orderable: false,
                        render: (a, b, data, d) => {
                            if (data.Buttons != null)
                                return data.Buttons;
                            else
                                return "";
                        }
                    }
                ]
            });
        </script>
    }
