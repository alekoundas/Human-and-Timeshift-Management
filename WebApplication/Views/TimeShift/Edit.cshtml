                '<button class="btn btn-danger celentimDeleteButton" celentimid="' + count + '"><i class="fa fa-trash-o celentimDeleteButton" celentimid="' + count + '"></i></button>' +
                '</div>' +
                '</div >' +

                '<div class="row">' +
                '<div class="col-md-1"></div>' +
                '<div class="col-md-2 "><button class="btn btn-success AppendEmployeeToWorkHourButton" Num="' + count + '"><i class="fa fa-plus " Num="' + count + '"></i><i class="fa fa-user " Num="' + count + '"></i></button></div>' +
