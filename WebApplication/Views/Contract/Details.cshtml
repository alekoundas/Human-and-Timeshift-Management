@model DataAccess.Models.Entity.Contract

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="box box-danger" style="margin-top:5%;">
            <div class="box-header">
                <h3 class="box-title">@ViewData["Title"]</h3>
                <div class="pull-right">
                    @Html.ButtonBackToList("Contract")
                    @Html.ButtonGoToEdit("Contract", Model.Id)
                </div>
            </div>

            <hr />

            <div class="box-body">

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="Title" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DayOfDaysPerWeek" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="DayOfDaysPerWeek" class="form-control" value="0" readonly disabled>
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="WorkingDaysPerWeek" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="WorkingDaysPerWeek" class="form-control" value="0" readonly disabled>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="HoursPerWeek" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="HoursPerWeek" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="HoursPerDay" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="HoursPerDay" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="GrossSalaryPerHour" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="GrossSalaryPerHour" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="NetSalaryPerHour" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="NetSalaryPerHour" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ContractMembershipId" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="ContractMembershipId" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ContractTypeId" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="ContractType.Name" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <div class="input-group">
                        <textarea asp-for="Description" class="form-control" readonly disabled></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CreatedBy_FullName" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="CreatedBy_FullName" class="form-control" readonly disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="CreatedOn" class="form-control" readonly disabled />
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-md-3"> </div>
</div>
