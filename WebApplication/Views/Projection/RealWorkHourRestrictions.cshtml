@section Scripts {
    <script src="~/js/jQueryMonthPicker/MonthPicker.js"></script>

    <script>
        const GetSelectedWorkPlaceId = () =>
            document.getElementById('WorkPlace_Select2').value;

        const GetMonthPickerValue = () =>
            document.getElementById('MonthPicker').value;

        const setHoursToMax = date => {
            var newDate = new Date(date);
            newDate.setHours(23, 59, 59);
            return moment(newDate);
        }

        $('.filterOffsetMinutes').change(e =>
            $('#RealWorkHourRestrictionsDatatable').DataTable().ajax.reload());
    </script>

    <script>
        $('#WorkPlace_Select2').select2({
            placeholder: "Επέλεξε πόστο",
            allowClear: true,
            ajax: {
                url: '/api/workplaces/select2',
                data: function (params) {
                    var query = {
                        search: params.term,
                        page: params.page || 1
                    }
                    return query;
                }
            }
        }).on('change', () =>
            $('#RealWorkHourRestrictionsDatatable').DataTable().ajax.reload());

        $('#MonthPicker').MonthPicker({
            Button: () => $('<button type="button" class=" btn btn-primary"><i class="fa fa-calendar"></i></button>').button(),
            OnAfterChooseMonth: () => $('#RealWorkHourRestrictionsDatatable').DataTable().ajax.reload()
        })

        var table = new DataTableService('#RealWorkHourRestrictionsDatatable')
            .ForApiController('RealWorkHours')
            .StartOrderFromCol(0)
            .AddColumn(true, true, "EmployeeFirstName")
            .AddColumn(true, true, "EmployeeLastName")
            .AddColumn(true, true, "EmployeeVatNumber")
            .AddColumn(true, true, "WorkPlaceTitle")
            .AddColumn(false, false, "RealWorkHour_Start")
            .AddColumn(false, false, "RealWorkHour_End")
            .AddColumn(false, false, "WorkHourRestriction_Max")
            .AddColumn(false, false, "WorkHourRestriction_Sum")
            .AjaxData((data, type, row, meta) => {
                data.predicate = 'ProjectionRealWorkHourRestrictions';
                if (GetSelectedWorkPlaceId() != '')
                    data.filterByWorkPlaceId = GetSelectedWorkPlaceId();

                if (GetMonthPickerValue() != '') {
                    data.filterByMonth = GetMonthPickerValue().split('/')[0];
                    data.filterByYear = GetMonthPickerValue().split('/')[1];
                }
                return JSON.stringify(data);
            })
            .CompleteDataTable();
    </script>
}
